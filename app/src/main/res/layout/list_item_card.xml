<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="5dp"
        android:onClick="cardClicked"
        android:animateLayoutChanges="true">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:id="@+id/relativeLayout1"
            android:backgroundTintMode="src_over"
            android:visibility="visible">
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHOP NAME"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOP ADDRESS"
                android:textSize="16dp"
                android:layout_below="@+id/shop_name"
                android:layout_alignParentStart="true"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textIsSelectable="false"
                android:typeface="serif"
                android:paddingRight="5dp"
                android:onClick="openMaps" />

            <TextView
                android:id="@+id/shop_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOP CONTACT"
                android:textSize="18dp"
                android:textColor="@color/blue"
                android:onClick="makeCall"
                android:layout_below="@+id/shop_address"
                android:paddingLeft="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CLOSED ON"
                android:id="@+id/closedOn"
                android:layout_gravity="bottom"
                android:textStyle="italic"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:id="@+id/relativeLayout2"
            android:visibility="gone"
            android:background="#ebe6e6">
            <TextView
                android:text="Rates:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rateslabel"
                android:textColor="#000000"
                android:textStyle="bold"
                android:typeface="normal"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp" />
            <TextView
                android:id="@+id/rates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rates"
                android:layout_below="@+id/rateslabel"
                android:paddingLeft="20dp"
                android:textSize="14dp" />
            <TextView
                android:text="Remarks:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/remarkslabel"
                android:layout_above="@+id/remarks"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp" />
            <TextView
                android:text="Remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/remarks"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"
                android:textSize="14dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>